{
	"name": "ui",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "run-p dev:containers:up dev:apisvr dev:run",
		"dev:apisvr": "GOOGLE_CLOUD_PROJECT=sk-goa-chat FIREBASE_AUTH_EMULATOR_HOST='127.0.0.1:9099' make -C ../apisvr dev",
		"dev:run": "GOOGLE_CLOUD_PROJECT=sk-goa-chat FIREBASE_AUTH_EMULATOR_HOST='127.0.0.1:9099' VITE_FIREBASE_AUTH_EMULATOR_HOST='127.0.0.1:9099' VITE_UISVR_ORIGIN=http://localhost:5173 vite dev",
		"dev:containers:up": "make -C ../containers/localdev up",
		"dev:containers:down": "make -C ../containers/localdev down",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"grpc:gen": "run-s grpc:gen:*",
		"grpc:gen:channels": "mkdir -p src/lib/server/protos && protoc --ts_out $_ --proto_path ../apisvr/services/gen/grpc/channels/pb ../apisvr/services/gen/grpc/channels/pb/goagen_services_channels.proto",
		"grpc:gen:users": "mkdir -p src/lib/server/protos && protoc --ts_out $_ --proto_path ../apisvr/services/gen/grpc/users/pb ../apisvr/services/gen/grpc/users/pb/goagen_services_users.proto",
		"grpc:gen:chat_messages": "mkdir -p src/lib/server/protos && protoc --ts_out $_ --proto_path ../apisvr/services/gen/grpc/chat_messages/pb ../apisvr/services/gen/grpc/chat_messages/pb/goagen_services_chat_messages.proto",
		"test": "run-s test:unit test:integration",
		"test:integration": "run-s test:integration:setup test:integration:run",
		"test:integration:containers:up": "make -C tests/integration/containers up",
		"test:integration:containers:down": "make -C tests/integration/containers down",
		"test:integration:containers:restart": " make -C tests/integration/containers down up",
		"test:integration:dbmigrattions:up": "make -C tests/integration mysql_wait_to_connect dbmigrations_up",
		"test:integration:run": "playwright test tests/integration/test.ts",
		"test:integration:setup": "run-s test:integration:containers:restart test:integration:dbmigrattions:up",
		"test:integration:teardown": "npm run test:integration:containers:down",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@playwright/test": "^1.40.1",
		"@protobuf-ts/plugin": "^2.9.3",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.27.4",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.30.0",
		"flowbite": "^2.2.0",
		"flowbite-svelte": "^0.44.20",
		"flowbite-svelte-icons": "^0.4.5",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.0.0",
		"prettier-plugin-tailwindcss": "^0.4.1",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"@grpc/grpc-js": "^1.9.12",
		"@protobuf-ts/grpc-transport": "^2.9.3",
		"firebase": "^10.7.0",
		"firebase-admin": "^11.11.1"
	}
}
